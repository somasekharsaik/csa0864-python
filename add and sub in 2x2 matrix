matrix1 = [[1, 2], [3, 4]]
matrix2 = [[5, 6], [7, 8]]

addition_result = [[0, 0], [0, 0]]
subtraction_result = [[0, 0], [0, 0]]

for i in range(2):
    for j in range(2):
        addition_result[i][j] = matrix1[i][j] + matrix2[i][j]

for i in range(2):
    for j in range(2):
        subtraction_result[i][j] = matrix1[i][j] - matrix2[i][j]

print("Matrix Addition:")
for row in addition_result:
    print(row)

print("\nMatrix Subtraction:")
for row in subtraction_result:
    print(row)
